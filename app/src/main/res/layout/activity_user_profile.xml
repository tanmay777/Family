<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.tanmayjha.familytogether.Entity.UserProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/collapsing_toolbar"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|enterAlways|snap|enterAlwaysCollapsed"
            app:expandedTitleMarginTop="0dp"
            app:expandedTitleMarginStart="10dp"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="68dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/back_drop"
                android:fitsSystemWindows="true"
                android:src="@drawable/tanmay"
                app:layout_collapseMode="parallax"/>
       <!--     <android.support.v4.widget.CircleImageView
                android:src="@drawable/tanmay"
                android:scaleType="centerCrop"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#80000000"
                android:id="@+id/person_image"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="bottom|left"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="30dp"/>-->

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentScrim="@android:color/transparent"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_user_profile" />

</android.support.design.widget.CoordinatorLayout>
